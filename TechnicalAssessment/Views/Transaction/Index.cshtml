@model IEnumerable<Transaction>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Transactions";
}
 
<h2>Transactions</h2>

<form asp-controller="Transaction" asp-action="Search" method="post">
<p>Select Search Parameter</p>
    <input type="radio" name="type" value="TransactionId">Transaction Identificator
    <input type="radio" name="type" value="CurrencyCode">Currency Code
    <input type="radio" name="type" value="Status">Status
    <iframe name="search" style="height:100px;width:200px;"></iframe>
    <input type="submit" value="Search" class="btn btn-default" /> |
</form>
@if (Model.ToList().Count == 0)
{
    <p>
        Currently no records in the Database.
    </p>
}
else
{
<form asp-controller="Transaction" asp-action="Index" method="get">
<table>
    <tr>
        <th>Transaction ID</th>
        <th>Amount</th>
        <th>Currency Code</th>
        <th>Transaction Date</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransactionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransactionId">Details</a> |
            </td>
        </tr>
    }
</table>
</form>
}
