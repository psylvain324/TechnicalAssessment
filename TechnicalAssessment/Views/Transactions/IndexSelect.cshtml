@page
@model TechnicalAssessment.Views.Pages.IndexSelectModel
@{
    ViewData["Title"] = "Transactions";
}

<h2>Transactions</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Transaction ID
            </th>
            <th>
                Amount
            </th>
            <th>
                Currency Code
            </th>
            <th>
                Transaction Date
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.transactionViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TransactionId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TransactionId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TransactionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
